<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.vungn.luckywheel.WheelView
        android:id="@+id/wv_main_wheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/spin_background"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/spin_arrow"
        android:src="@drawable/ig_arrow" />
</RelativeLayout>